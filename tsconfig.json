{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build", // Output directory for compiled files
    "rootDir": "./src", // Source code directory
    "resolveJsonModule": true, // Allows importing JSON files
    "declaration": true, // Generates corresponding .d.ts files
    "sourceMap": true, // Generates source maps for better debugging
    "lib": [
      "es2022",
      "dom"
    ], // List of library files to include
    "types": [
      "node"
    ], // Typescript declaration files for Node.js
    "baseUrl": "./",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}